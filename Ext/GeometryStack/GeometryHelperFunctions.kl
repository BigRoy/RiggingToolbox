    }
    case RGBAAttribute:{
      RGBAAttribute clone();
      clone.resize(attr.size());
      clone.copyFrom(src);
      return clone;
    }
    case RGBAttribute:{
      RGBAttribute clone();
      clone.resize(attr.size());
      clone.copyFrom(src);
      return clone;
    }
    case RGBAttribute:{
      RGBAttribute clone();
      clone.resize(attr.size());
