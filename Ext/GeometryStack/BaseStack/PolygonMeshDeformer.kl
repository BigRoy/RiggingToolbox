require Math;
require Geometry;


object PolygonMeshDeformer : BaseDeformer {
	UInt32 polyMeshIndices[];
};

function PolygonMeshDeformer.bind!(Geometry geometries[]){
	this.polyMeshIndices.resize(0);
	for(Integer i=0; i<geometries.size; i++){
		if(geometries[i] != null && geometries[i].type() == PolygonMesh)
			this.polyMeshIndices.push(i);
	}
}
